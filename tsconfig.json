{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib",
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "allowSyntheticDefaultImports": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "importHelpers": true,
    "noUnusedLocals": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es6", "dom"],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "paths": {
      "@railing/core": ["./packages/core/index.d.ts"],
      "@railing/types": ["packages/types/*"],
      "@railing/react-renderer/*": ["./packages/react-renderer/lib/*"],
      "@railing/webpack": ["./packages/webpack/lib/index.d.ts"],
      "@railing/document": ["./packages/document/lib/index.d.ts"]
    }
  },
  "exclude": ["node_modules", "lib"]
}
